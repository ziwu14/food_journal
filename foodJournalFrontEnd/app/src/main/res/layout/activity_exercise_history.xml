<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ExerciseHistoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/activity_exercise_history_backBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="-55dp"
            android:background="@drawable/custom_button1"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <ImageView
            android:layout_width="219dp"
            android:layout_height="70dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/sports"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="53dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="55dp"
        android:layout_marginLeft="55dp">
        <EditText
            android:id="@+id/activity_exercise_history_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="exercise" />

        <EditText
            android:id="@+id/activity_exercise_history_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="amount/min"
            android:inputType="number" />

        <EditText
            android:id="@+id/activity_exercise_history_calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="energy/Cal"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:id="@+id/activity_exercise_history_addBtn"
            android:background="@drawable/custom_button1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="add"
            android:textSize="26sp"/>

    </LinearLayout>




    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_exercise_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="59dp"
        android:layout_marginLeft="55dp"></android.support.v7.widget.RecyclerView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.FoodRecipeActivity">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="55dp"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/activity_food_recipe_backBtn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button1"
            android:src="@drawable/ic_arrow_back_black_24dp" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">>

        <EditText
            android:id="@+id/searchbar_recipe"
            android:layout_width="180dp"
            android:layout_height="wrap_content"

            android:hint="Enter food name"
            android:layout_weight="1"
            android:textColorHint="#F44336"
            android:inputType="text"
            android:maxLines="1" />

        <ImageButton
            android:id="@+id/enterbutton_recipe"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/custom_button1"
            android:src="@drawable/ic_search_white_24dp"
            android:text="enter" />



    </LinearLayout>


    <ScrollView
        android:id="@+id/scroll_recipe"
        android:layout_width="300dp"
        android:layout_marginLeft="58dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/scrolllayout_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17.5dp"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>


</LinearLayout>

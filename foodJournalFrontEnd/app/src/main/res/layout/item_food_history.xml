<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:scrollbarAlwaysDrawHorizontalTrack="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5">

            <TextView
                android:id="@+id/item_food_history_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="0"
                android:textColor="@android:color/black"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textSize="10dp">

                <TextView
                    android:id="@+id/item_food_amt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="gram"/>

                <TextView
                    android:id="@+id/item_food_history_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf = "@id/item_food_amt_text"
                    android:textColor="@android:color/black"
                     />

                <TextView
                    android:id="@+id/item_food_cal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/item_food_history_amount"
                    android:text="kcal"/>

                <TextView
                    android:id="@+id/item_food_history_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf = "@id/item_food_cal_text"
                    android:textColor="@android:color/black"
                     />


                <TextView
                    android:id="@+id/item_food_history_time"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/item_food_history_calorie"
                    android:textColor="@android:color/black"
                     />

            </LinearLayout>

        </LinearLayout>

        <!--android:src="@drawable/ic_delete_black_24dp"-->
        <ImageButton
            android:id="@+id/item_food_history_deleteBtn"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Del"
            android:textSize="15dp" />

    </LinearLayout>


</android.support.v7.widget.CardView>